# WSOPTV Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
POSTGRES_USER=wsoptv
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=wsoptv

# ============================================================================
# Search (MeiliSearch)
# ============================================================================
MEILI_MASTER_KEY=your_meili_master_key_here
MEILI_ENV=development

# ============================================================================
# Security (JWT)
# ============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_here

# ============================================================================
# App Settings
# ============================================================================
DEBUG=false

# ============================================================================
# NAS Mount Path
# ============================================================================
# Windows: Z: or D:\path\to\nas
# Linux: /mnt/nas
NAS_PATH=Z:

# ============================================================================
# SQLite Migration Source
# ============================================================================
SQLITE_DB_PATH=D:/AI/claude01/shared-data
